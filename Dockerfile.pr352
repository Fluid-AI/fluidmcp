# Railway Deployment - PR #352 (Text-only LLM with Replicate)
FROM python:3.12-slim

WORKDIR /app

# Copy requirements
COPY requirements.txt .

# Install dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY fluidmcp ./fluidmcp
COPY railway-pr352.json ./config.json
COPY setup.py .
COPY README.md .

# Install FluidMCP
RUN pip install -e .

# Expose port (Railway auto-detects)
EXPOSE 8099

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
  CMD python -c "import urllib.request; urllib.request.urlopen('http://localhost:8099/health').read()"

# Start FluidMCP with PR #352 config (text-only LLM)
CMD ["fluidmcp", "run", "config.json", "--file", "--start-server"]
