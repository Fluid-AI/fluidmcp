{
  "mcpServers": {},
  "llmModels": {
    "llava": {
      "type": "vllm",
      "command": "vllm",
      "args": [
        "serve",
        "llava-hf/llava-1.5-7b-hf",
        "--port", "8001",
        "--dtype", "float16"
      ],
      "env": {
        "CUDA_VISIBLE_DEVICES": "0"
      },
      "endpoints": {
        "base_url": "http://localhost:8001/v1"
      },
      "capabilities": ["text", "vision"],
      "restart_policy": "on-failure"
    },
    "flux-image": {
      "type": "replicate",
      "model": "black-forest-labs/flux-schnell",
      "api_key": "${REPLICATE_API_TOKEN}",
      "default_params": {
        "aspect_ratio": "16:9",
        "output_format": "png"
      },
      "capabilities": ["text-to-image"],
      "timeout": 120
    },
    "veo-video": {
      "type": "replicate",
      "model": "google/veo-3",
      "api_key": "${REPLICATE_API_TOKEN}",
      "default_params": {
        "duration": 5,
        "aspect_ratio": "16:9"
      },
      "capabilities": ["text-to-video"],
      "timeout": 300
    },
    "kling-animate": {
      "type": "replicate",
      "model": "kwaivgi/kling-v2.6",
      "api_key": "${REPLICATE_API_TOKEN}",
      "default_params": {
        "duration": 5,
        "aspect_ratio": "16:9"
      },
      "capabilities": ["image-to-video", "text-to-video"],
      "timeout": 300
    }
  }
}
